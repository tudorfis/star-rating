{% assign chat_bubble_color = block.settings.chat_bubble_color %}

<div 
    id="skier" 
    style="
        position: fixed;
        bottom: 10px;
        right: 10px;
        margin: 0; 
        padding: 0;
        border: 5px solid {{ chat_bubble_color }}
    "
>
    <img
        src="{{ "skier.jpg" | asset_url }}"
        width="100"
        height="100"
        style="margin: 0; padding: 0;"
        alt=""
        loading="lazy"
    />
</div>

{% schema %}
{
    "name": "Floating Skier",
    "target": "body",
    "settings": [
        {
            "type": "color",
            "id": "chat_bubble_color",
            "label": "Chat bubble color",
            "default": "#ff0000"
        }
    ] 
}
{% endschema %}